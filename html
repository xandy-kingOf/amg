<script>
    // Estrutura de usuários com seus papéis
    let users = {
        'admin': {password: 'admin123', role: 'admin'},
        'cliente1': {password: '1234', role: 'cliente'},
        'admin': {password: 'Abcd@123', role: 'alexandre'}
    };

    let orders = {
        'COD123': {status: 'Pedido Realizado', history: 'A pedra é única, extraída com cuidado...'}
    };

    // Função de Login
    function login() {
        const username = document.getElementById("username").value;
        const password = document.getElementById("password").value;

        // Verificação do tipo de usuário
        if (users[username] && users[username].password === password) {
            if (users[username].role === 'admin') {
                showAdminPanel();
            } else {
                showClientPanel();
            }
        } else {
            alert("Usuário ou senha incorretos.");
        }
    }

    function showAdminPanel() {
        document.getElementById("loginContainer").style.display = "none";
        document.getElementById("adminContainer").style.display = "block";
    }

    function showClientPanel() {
        document.getElementById("loginContainer").style.display = "none";
        document.getElementById("clientContainer").style.display = "block";
        alert("Bem-vindo, cliente!");
    }

    function generateAdminCode() {
        const code = 'ADM-' + Math.random().toString(36).substring(2, 8).toUpperCase();
        alert("Código do Administrador: " + code);
    }

    function generateClientCode() {
        const code = 'CLI-' + Math.random().toString(36).substring(2, 8).toUpperCase();
        document.getElementById("clientCode").innerText = "Seu código é: " + code;
    }

    function showRegister() {
        document.getElementById("loginContainer").style.display = "none";
        document.getElementById("registerContainer").style.display = "block";
    }

    function showLogin() {
        document.getElementById("registerContainer").style.display = "none";
        document.getElementById("verifyContainer").style.display = "none";
        document.getElementById("loginContainer").style.display = "block";
    }

    function sendVerificationCode() {
        alert("Código de verificação enviado para o número informado.");
        showLogin();
    }

    function verifyCode() {
        alert("Código verificado com sucesso!");
        showLogin();
    }

    function updateOrder() {
        const orderCode = document.getElementById("editOrder").value;
        const newStatus = document.getElementById("progress").value;
        const newHistory = document.getElementById("stoneHistory").value;

        if (orders[orderCode]) {
            orders[orderCode].status = newStatus;
            orders[orderCode].history = newHistory;
            alert("Pedido atualizado com sucesso.");
        } else {
            alert("Código do pedido não encontrado.");
        }
    }

    function createUser() {
        const newUser = document.getElementById("editUser").value;
        const newPassword = prompt("Digite a nova senha:");
        users[newUser] = {password: newPassword, role: 'cliente'};
        alert("Usuário criado com sucesso.");
    }

    function resetPassword() {
        const userToReset = document.getElementById("editUser").value;
        if (users[userToReset]) {
            users[userToReset].password = prompt("Digite a nova senha:");
            alert("Senha redefinida com sucesso.");
        } else {
            alert("Usuário não encontrado.");
        }
    }

    function logout() {
        document.getElementById("adminContainer").style.display = "none";
        document.getElementById("clientContainer").style.display = "none";
        document.getElementById("loginContainer").style.display = "block";
    }
</script>
</body>
